{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "target":"es5",
    "lib":["es2015", "es2017", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "../node_modules/",
        "./types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}